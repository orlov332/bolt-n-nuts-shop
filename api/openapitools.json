{
  "$schema": "./node_modules/@openapitools/openapi-generator-cli/config.schema.json",
  "spaces": 2,
  "generator-cli": {
    "version": "6.0.0",
    "generators": {
      "typescript-client-code": {
        "generatorName": "typescript-axios",
        "output": "client-ts",
        "glob": "contracts/*.yaml",
        "apiPackage": "#{name}.api",
        "modelPackage": "#{name}.model",
        "additionalProperties": {
          "npmName": "bolt-n-nuts-api-client",
          "supportsES6": true,
          "withInterfaces": true,
          "withSeparateModelsAndApi": true
        }
      },
      "documentation": {
        "generatorName": "markdown",
        "output": "docs",
        "glob": "contracts/*.yaml"
      }
    }
  }
}
